<Window x:Class="ATEDNIULI_NET8.Views.MouseActionLabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATEDNIULI_NET8.Views"
        mc:Ignorable="d"
        Title="MouseActionLabelWindow" Height="40" Width="150"
        Left="{Binding LeftState}" Top="{Binding TopState}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Visibility="{Binding VisibilityState}">
    <Border Background="#DD333333" CornerRadius="8" Padding="10">
        <TextBlock x:Name="MouseActionText" 
                   Foreground="Yellow" 
                   FontWeight="Bold" 
                   Text="{Binding MouseAction}"
                   FontSize="14"/>
    </Border>
</Window>
