<Window x:Class="ATEDNIULI_NET8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATEDNIULI_NET8"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="70"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>

        <Image Width="32" Source="/Assets/Icons/camera-mouse-preview.png"/>
        <Image Grid.Row="1" Width="32" Source="/Assets/Icons/typing-disabled.png"/>
        <Image Grid.Row="2" Width="32" Source="{Binding ListeningIcon}"/>
    </Grid>
</Window>
